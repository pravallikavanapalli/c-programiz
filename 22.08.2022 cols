int main() {
    int a[100][100];
    int i,j,r,c,sum,cols;
    printf("Enter how many rows\n");
    scanf("%d",&c);
    printf("Enter elements into array \n");
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
    printf("Enter column number");
    scanf("%d",&cols);
    cols=cols-1;
    for(i=0;i<r;i++)
    {
        sum=sum+a[i][cols];
    }
